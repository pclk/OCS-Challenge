generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Wing {
  id        Int      @id @default(autoincrement())
  value     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("wings")
}

model Exercise {
  id        Int          @id @default(autoincrement())
  name      String       @unique
  type      ExerciseType
  createdAt DateTime     @default(now()) @map("created_at")
  scores    Score[]

  @@map("exercises")
}

model NameRankMapping {
  id        Int      @id @default(autoincrement())
  name      String
  wing      String
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([name, wing])
  @@map("name_rank_mappings")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  wing            String?
  password        String?
  hasLoggedIn     Boolean   @default(false) @map("has_logged_in")
  passwordChangedAt DateTime? @map("password_changed_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  scores          Score[]

  @@unique([name, wing])
  @@map("users")
}

model Score {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  exerciseId Int      @map("exercise_id")
  value      Int
  createdAt  DateTime @default(now()) @map("created_at")
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@index([exerciseId, value(sort: Desc)])
  @@index([userId])
  @@map("scores")
}

model AccountAction {
  id        Int       @id @default(autoincrement())
  userId    Int?      @map("user_id")
  userName  String?   @map("user_name")
  userWing  String?   @map("user_wing")
  action    String
  details   Json?
  createdAt DateTime  @default(now()) @map("created_at")

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("account_actions")
}

model Report {
  id          Int       @id @default(autoincrement())
  name        String
  wing        String
  password    String?   // Optional, should be hashed if provided
  type        ReportType
  email       String?
  phone       String?
  notes       String?
  status      ReportStatus @default(PENDING)
  resolvedAt  DateTime? @map("resolved_at")
  resolvedBy  String?   @map("resolved_by") // Admin who resolved it
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([wing])
  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@map("reports")
}

enum ExerciseType {
  rep
}

enum ReportType {
  ACCOUNT_CONFLICT
  NEW_ACCOUNT_REQUEST
}

enum ReportStatus {
  PENDING
  RESOLVED
  DISMISSED
}
